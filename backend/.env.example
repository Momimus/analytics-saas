DATABASE_URL="postgresql://postgres:postgres@localhost:5432/analytics_saas?schema=public"
JWT_SECRET="replace-with-strong-secret"
PORT=4000
# Single source of truth for both CORS and CSRF origin checks.
ALLOWED_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"
AUTH_COOKIE_NAME="auth_token"
# Use "lax" for same-site dev, or "none" for cross-site HTTPS setups.
AUTH_COOKIE_SAMESITE="lax"
CSRF_COOKIE_NAME=csrf_token
CSRF_HEADER_NAME=x-csrf-token
ALLOW_BEARER_AUTH=false
AUTH_RATE_LIMIT_WINDOW_MS=600000
AUTH_RATE_LIMIT_MAX=60
AUTH_LOGIN_ID_WINDOW_MS=600000
AUTH_LOGIN_ID_MAX=20
AUTH_FORGOT_ID_WINDOW_MS=600000
AUTH_FORGOT_ID_MAX=10
AUTH_RESET_ID_WINDOW_MS=600000
AUTH_RESET_ID_MAX=10
# Optional Redis URL for distributed rate limiting.
# If unset, backend falls back to in-memory limiter.
REDIS_URL=
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=
